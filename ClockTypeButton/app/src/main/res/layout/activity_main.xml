<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backriver"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutMenu"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_round_layout"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <View
                android:id="@+id/viewCenterPlaceHolder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#0000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintCircle="@id/viewCenterPlaceHolder"
                app:layout_constraintCircleAngle="0"
                app:layout_constraintCircleRadius="90dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_photo_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Post"
                    android:textColor="#3AE6CC"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintCircle="@id/viewCenterPlaceHolder"
                app:layout_constraintCircleAngle="90"
                app:layout_constraintCircleRadius="90dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_photo_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Camera"
                    android:textColor="#3AE6CC"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintCircle="@id/viewCenterPlaceHolder"
                app:layout_constraintCircleAngle="180"
                app:layout_constraintCircleRadius="90dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_photo_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Under"
                    android:textColor="#3AE6CC"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintCircle="@id/viewCenterPlaceHolder"
                app:layout_constraintCircleAngle="270"
                app:layout_constraintCircleRadius="90dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_photo_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Good"
                    android:textColor="#3AE6CC"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/CenterImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:elevation="5dp"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher_round"
            android:translationZ="5dp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>